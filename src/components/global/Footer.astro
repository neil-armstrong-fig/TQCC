---
import { socialLinks } from "../../data/navigation";
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<footer class="bg-tqcc-black text-white/70">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Club info -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <img
            src={`${baseUrl}/images/badge.png`}
            alt="TQCC Badge"
            width="48"
            height="48"
            class="rounded-full"
          />
          <div>
            <h3 class="text-tqcc-yellow font-bold text-lg">TQCC</h3>
            <p class="text-sm">Titanic Quarter Cycling Club</p>
          </div>
        </div>
        <p class="text-sm leading-relaxed">
          Belfast's community cycling club since 2014. Promoting cycling in the
          historic Titanic Quarter and beyond.
        </p>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href={`${baseUrl}/about`} class="hover:text-tqcc-yellow transition-colors"
              >About Us</a
            >
          </li>
          <li>
            <a
              href={`${baseUrl}/rides-events`}
              class="hover:text-tqcc-yellow transition-colors">Rides & Events</a
            >
          </li>
          <li>
            <a href={`${baseUrl}/blog`} class="hover:text-tqcc-yellow transition-colors"
              >News</a
            >
          </li>
          <li>
            <a
              href={`${baseUrl}/membership`}
              class="hover:text-tqcc-yellow transition-colors">Membership</a
            >
          </li>
          <li>
            <a href={`${baseUrl}/contact`} class="hover:text-tqcc-yellow transition-colors"
              >Contact</a
            >
          </li>
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="text-white font-semibold mb-4">Connect With Us</h3>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/70 hover:text-tqcc-yellow transition-colors"
                aria-label={`Follow us on ${link.platform}`}
              >
                {link.platform === "Instagram" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                )}
                {link.platform === "Facebook" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                )}
                {link.platform === "Strava" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.598h4.172L10.463 0l-7 13.828h4.169" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
        <p class="text-sm mt-4">
          <a
            href="mailto:info@titanicquartercc.com"
            class="hover:text-tqcc-yellow transition-colors"
          >
            info@titanicquartercc.com
          </a>
        </p>
      </div>
    </div>

    <div
      class="border-t border-white/10 mt-8 pt-8 text-sm text-center text-white/40"
    >
      <p>
        &copy; {new Date().getFullYear()} Titanic Quarter Cycling Club. All rights
        reserved.
      </p>
    </div>
  </div>
</footer>
