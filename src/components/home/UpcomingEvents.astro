---
import type { CollectionEntry } from "astro:content";
import EventCard from "../events/EventCard.astro";

interface Props {
  events: CollectionEntry<"events">[];
}

const { events } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

{
  events.length > 0 && (
    <section class="py-16 bg-tqcc-gray-light">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-bold">Upcoming Events</h2>
          <a
            href={`${baseUrl}/events`}
            class="text-tqcc-pink hover:text-tqcc-pink-light font-medium transition-colors"
          >
            View all &rarr;
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {events.map((event) => (
            <EventCard event={event} />
          ))}
        </div>
      </div>
    </section>
  )
}
