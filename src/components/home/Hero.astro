---
// Hero component â€” full-width banner with TQCC branding
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<section class="relative bg-tqcc-black overflow-hidden">
  <div
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url('${baseUrl}/images/hero-bg.jpg');`}
  >
    <div class="absolute inset-0 bg-tqcc-black/65"></div>
  </div>
  <div class="max-w-7xl mx-auto px-4 py-20 md:py-28 relative z-10">
    <div class="max-w-3xl">
      <img
        src={`${baseUrl}/images/badge.png`}
        alt="TQCC Badge"
        width="80"
        height="80"
        class="mb-6 rounded-full"
      />
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-tqcc-yellow mb-4 leading-tight">
        Titanic Quarter<br />Cycling Club
      </h1>
      <p class="text-lg md:text-xl text-white/90 mb-8 max-w-xl leading-relaxed">
        Belfast's community cycling club since 2014. Group rides, events, youth
        cycling, and more from the historic Titanic Quarter.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href={`${baseUrl}/rides-events`}
          class="bg-tqcc-yellow text-tqcc-black font-bold px-8 py-3 rounded-lg hover:bg-tqcc-yellow-dark transition-colors"
        >
          See Our Rides
        </a>
        <a
          href={`${baseUrl}/about`}
          class="border-2 border-tqcc-yellow text-tqcc-yellow font-bold px-8 py-3 rounded-lg hover:bg-tqcc-yellow hover:text-tqcc-black transition-colors"
        >
          About TQCC
        </a>
      </div>
    </div>
  </div>

  <!-- Decorative pink stripe along the bottom (Giro d'Italia homage) -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-tqcc-pink"></div>
</section>
