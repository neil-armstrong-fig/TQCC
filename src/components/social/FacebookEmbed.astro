---
interface Props {
  pageUrl?: string;
  width?: number;
  height?: number;
  tabs?: string;
}

const {
  pageUrl = "https://www.facebook.com/TitanicQuarterCC/",
  width = 340,
  height = 500,
  tabs = "timeline,events",
} = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6">
  <div class="flex items-center gap-3 mb-4">
    <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
    </svg>
    <h3 class="text-xl font-bold">Facebook</h3>
  </div>
  <iframe
    src={`https://www.facebook.com/plugins/page.php?href=${encodeURIComponent(pageUrl)}&tabs=${tabs}&width=${width}&height=${height}&small_header=true&adapt_container_width=true&hide_cover=false&show_facepile=true`}
    width={width}
    height={height}
    style="border:none;overflow:hidden"
    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
    loading="lazy"></iframe>
</div>
