---
import type { StravaActivity } from "../../lib/strava";
import { formatDistance, formatDuration, metersToMiles } from "../../lib/strava";

interface Props {
  activities: StravaActivity[];
}

const { activities } = Astro.props;

function getActivityLocation(type: string): { label: string; color: string } {
  if (type.toLowerCase().includes("virtual") || type === "Workout") {
    return { label: "Indoor", color: "bg-blue-100 text-blue-700" };
  }
  return { label: "Outdoor", color: "bg-green-100 text-green-700" };
}

function calculateSpeed(distance: number, movingTime: number): string {
  if (movingTime === 0) return "0.0";
  const milesPerHour = (metersToMiles(distance) / movingTime) * 3600;
  return milesPerHour.toFixed(1);
}

function formatElevation(meters: number): string {
  const feet = meters * 3.28084;
  return Math.round(feet).toString();
}
---

<div class="bg-white rounded-lg shadow-md p-6">
  <div class="flex items-center gap-3 mb-6">
    <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.598h4.172L10.463 0l-7 13.828h4.169" />
    </svg>
    <h3 class="text-xl font-bold">Recent Club Activities</h3>
  </div>

  {
    activities.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {activities.slice(0, 6).map((activity) => {
          const location = getActivityLocation(activity.type);
          const avgSpeed = calculateSpeed(activity.distance, activity.moving_time);
          return (
            <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition-colors">
              <div class="flex items-center gap-2 mb-2">
                <a
                  href={`https://www.strava.com/athletes/${activity.athlete.id}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="font-semibold text-base hover:text-orange-500 transition-colors"
                >
                  {activity.athlete.firstname}{" "}
                  {activity.athlete.lastname.charAt(0)}.
                </a>
                <span class={`text-xs px-2 py-0.5 rounded-full ${location.color}`}>
                  {location.label}
                </span>
              </div>
              <a
                href={`https://www.strava.com/activities/${activity.id}`}
                target="_blank"
                rel="noopener noreferrer"
                class="block text-sm text-tqcc-gray hover:text-orange-500 transition-colors mb-3 line-clamp-2"
              >
                {activity.name}
              </a>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <div class="flex items-center gap-1.5 text-tqcc-gray">
                  <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                  <span class="font-medium text-tqcc-black">{formatDistance(activity.distance)}</span>
                </div>
                <div class="flex items-center gap-1.5 text-tqcc-gray">
                  <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium text-tqcc-black">{formatDuration(activity.moving_time)}</span>
                </div>
                <div class="flex items-center gap-1.5 text-tqcc-gray">
                  <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  <span class="font-medium text-tqcc-black">{avgSpeed} mph</span>
                </div>
                {activity.total_elevation_gain && activity.total_elevation_gain > 0 && (
                  <div class="flex items-center gap-1.5 text-tqcc-gray">
                    <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                    </svg>
                    <span class="font-medium text-tqcc-black">{formatElevation(activity.total_elevation_gain)} ft</span>
                  </div>
                )}
              </div>
            </div>
          );
        })}
      </div>
    ) : (
      <p class="text-tqcc-gray text-sm">
        Connect with us on Strava to see club activities.
      </p>
    )
  }

  <a
    href="https://www.strava.com/clubs/110633"
    target="_blank"
    rel="noopener noreferrer"
    class="block text-center mt-4 text-orange-500 hover:text-orange-600 font-medium transition-colors"
  >
    View Club on Strava &rarr;
  </a>
</div>
