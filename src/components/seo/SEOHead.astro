---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: "website" | "article";
  publishDate?: Date;
  noindex?: boolean;
}

const { title, description, image, type = "website", publishDate, noindex } =
  Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle =
  title === "Home"
    ? "Titanic Quarter Cycling Club | Belfast"
    : `${title} | TQCC`;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
// If image starts with /, prepend BASE_URL to handle subdirectory deployments
// If image starts with http:// or https://, it's already absolute
// Otherwise, it's a relative path that can be resolved normally
const imagePath = image
  ? (image.startsWith('/') ? `${baseUrl}${image}` : image)
  : undefined;
const imageURL = imagePath ? new URL(imagePath, Astro.site).toString() : undefined;
---

<title>{fullTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:site_name" content="Titanic Quarter Cycling Club" />
{imageURL && <meta property="og:image" content={imageURL} />}
{
  publishDate && (
    <meta
      property="article:published_time"
      content={publishDate.toISOString()}
    />
  )
}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
{imageURL && <meta name="twitter:image" content={imageURL} />}
