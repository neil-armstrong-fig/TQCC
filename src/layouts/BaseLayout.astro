---
import "../styles/global.css";
import Header from "../components/global/Header.astro";
import Footer from "../components/global/Footer.astro";
import SEOHead from "../components/seo/SEOHead.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
  publishDate?: Date;
  noindex?: boolean;
}

const {
  title,
  description = "Titanic Quarter Cycling Club â€” Belfast's community cycling club since 2014. Group rides, events, and more from the historic Titanic Quarter.",
  image = "/images/og-default.jpg",
  type = "website",
  publishDate,
  noindex = false,
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <SEOHead
      title={title}
      description={description}
      image={image}
      type={type}
      publishDate={publishDate}
      noindex={noindex}
    />
    <ClientRouter />
    <link rel="icon" type="image/x-icon" href={`${baseUrl}/favicon.ico`} sizes="48x48" />
    <link rel="icon" type="image/png" href={`${baseUrl}/favicon-32x32.png`} sizes="32x32" />
    <link rel="icon" type="image/png" href={`${baseUrl}/favicon-16x16.png`} sizes="16x16" />
    <link rel="apple-touch-icon" href={`${baseUrl}/apple-touch-icon.png`} sizes="180x180" />
    <link rel="manifest" href={`${baseUrl}/site.webmanifest`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-tqcc-black font-body">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:z-50 focus:bg-tqcc-yellow focus:text-tqcc-black focus:px-4 focus:py-2"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer />
    <script>
      import {
        getPreferredUnit,
        formatDistance,
        convertDistanceString,
        formatSpeed,
        formatElevation,
        convertPaceString,
        type DistanceUnit,
      } from "../lib/units";

      function updateDistances() {
        const unit = getPreferredUnit();

        // Update distance displays from Strava (meters in data attribute)
        document.querySelectorAll(".distance-display").forEach((el) => {
          const meters = parseFloat(el.getAttribute("data-meters") || "0");
          const keepDecimals = el.getAttribute("data-keep-decimals") === "true";
          if (meters > 0) {
            el.textContent = formatDistance(meters, unit, keepDecimals);
          }
        });

        // Update distance strings from markdown (original string in data attribute)
        document.querySelectorAll(".distance-string").forEach((el) => {
          const originalDistance = el.getAttribute("data-distance");
          if (originalDistance) {
            el.textContent = convertDistanceString(originalDistance, unit);
          }
        });

        // Update distance unit labels
        document.querySelectorAll(".distance-unit").forEach((el) => {
          el.textContent = unit === "miles" ? "Miles" : "Kilometers";
        });

        // Update speed displays
        document.querySelectorAll(".speed-display").forEach((el) => {
          const meters = parseFloat(el.getAttribute("data-meters") || "0");
          const seconds = parseFloat(el.getAttribute("data-seconds") || "0");
          if (meters > 0 && seconds > 0) {
            el.textContent = formatSpeed(meters, seconds, unit);
          }
        });

        // Update elevation displays
        document.querySelectorAll(".elevation-display").forEach((el) => {
          const elevationMeters = parseFloat(el.getAttribute("data-elevation-meters") || "0");
          if (elevationMeters > 0) {
            el.textContent = formatElevation(elevationMeters, unit);
          }
        });

        // Update pace strings (e.g., "15-17 mph")
        document.querySelectorAll(".pace-string").forEach((el) => {
          const originalPace = el.getAttribute("data-pace");
          if (originalPace) {
            el.textContent = convertPaceString(originalPace, unit);
          }

          // Handle pace descriptions (e.g., "Average pace 12-14 mph.")
          const paceDescription = el.getAttribute("data-pace-description");
          if (paceDescription) {
            el.textContent = convertPaceString(paceDescription, unit);
          }
        });
      }

      // Update on page load
      document.addEventListener("astro:page-load", updateDistances);

      // Update when unit changes
      window.addEventListener("unit-change", updateDistances);
    </script>
  </body>
</html>
