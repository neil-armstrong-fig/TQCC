---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  publishDate?: Date;
}

const { title, description, image, publishDate } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  type="article"
  publishDate={publishDate}
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <slot />
  </div>
</BaseLayout>
